<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Title="Basket"
             x:Class="newWaterDelivery.MainPage">

    <StackLayout BackgroundColor="#F8F7FF" Padding="5">
        <StackLayout x:Name="Stack">
        </StackLayout>

        <Grid VerticalOptions="EndAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2,5*"/>
                <ColumnDefinition Width="2,5*"/>
                <ColumnDefinition Width="2,5*"/>
                <ColumnDefinition Width="2,5*"/>
            </Grid.ColumnDefinitions>

            <Button Text="+"
                    CornerRadius="40"
                    VerticalOptions="End"
                    WidthRequest="50"
                    HeightRequest="50"
                    Margin="5"
                    Grid.Column="3"
                    BackgroundColor="#5F53A3" BorderColor="Black" 
                    TextColor="#F8F7FF"
                    BorderWidth="1"
                    Clicked="Add_new_drink">
                <!--<Button.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="Android" Value="Lobster-Regular.ttf#Lobster-Regular" />
                    </OnPlatform>
                </Button.FontFamily>-->
            </Button>

            <Button Text="Order"
                CornerRadius="10"
                VerticalOptions="Center"
                Margin="5"
                WidthRequest="70"
                HeightRequest="50"
                Grid.Column="0"
                BackgroundColor="#5F53A3" BorderColor="Black" TextColor="#F8F7FF"
                BorderWidth="1"
                Clicked="Confirm_drinks">
                <!--<Button.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="Android" Value="Lobster-Regular.ttf#Lobster-Regular" />
                    </OnPlatform>
                </Button.FontFamily>-->
            </Button>   
        </Grid>
       
    </StackLayout>
</ContentPage>
